{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["core"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "opts": {
        "destination": "./docs/",
        "encoding": "utf8",
        "private": true,
        "recurse": true,
        "template": "node_modules/better-docs"
    },
    "templates": {
        "better-docs": {
            "name": "lqs-tools",
            "cleverLinks": false,
            "monospaceLinks": true
        }
    }
}